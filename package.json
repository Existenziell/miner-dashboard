{
  "name": "miner-dashboard",
  "version": "1.0.0",
  "description": "Real-time monitoring dashboard for NerdQaxe++ Bitcoin Solo Miner and similar devices",
  "repository": "github:Existenziell/miner-dashboard",
  "homepage": "https://github.com/Existenziell/miner-dashboard#readme",
  "bugs": "https://github.com/Existenziell/miner-dashboard/issues",
  "engines": {
    "node": ">=18"
  },
  "type": "module",
  "scripts": {
    "dev": "concurrently --kill-others \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "node --watch server/index.js",
    "dev:client": "cd client && npx vite",
    "build": "npm run build --prefix client",
    "lint": "npm run lint --prefix client",
    "test": "npm run test --prefix client",
    "test:watch": "npm run test:watch --prefix client",
    "start": "NODE_ENV=production node server/index.js",
    "all": "concurrently \"npm run build\" \"npm run test\" \"npm run lint\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "multer": "^2.0.2",
    "ws": "^8.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
